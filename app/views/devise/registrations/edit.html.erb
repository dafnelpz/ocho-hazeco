<h2 class="user-my-info">mi información</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "nombre" %><br>
    <%= f.text_field :name, class: "field_content" %>
  </div>

  <div class="field">
    <%= f.label :phone, "teléfono" %><br>
    <%= f.text_field :phone, class: "field_content" %>
  </div>
  
  <div class="field">
    <%= f.label :address, "dirección" %><br>
    <%= f.text_field :address, class: "field_content f-address" %>
  </div>
  
  <div class="field">
    <%= f.label :email, "e-mail" %><br />
    <%= f.email_field :email, class: "field_content" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "password" %></br> <i>(Déjalo en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "field_content" %>
    <% if @minimum_password_length %>
      <br />
      <!-- <em><%= @minimum_password_length %> characters minimum</em> -->
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "confirmación de contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "field_content" %>
  </div>

  <!-- <div class="field"> -->
   <!-- <%#= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br /> -->
    <%#= f.password_field :current_password, autocomplete: "off" %>
  <!-- </div> -->

  <div class="actions">
    <%= f.submit "actualizar mi información", class: "button-update" %>
  </div>
<% end %>
<hr>
<div class="edit-user">
  <%- if current_user.role.user%>
    <p>¿No eres feliz en OCHO? ☹️ <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: "button-delete" %></p>

    <%= link_to 'Regresar a mi perfil', users_profile_path, class: "prof-return" %>
  <% end %>
</div>